#--< XDG user directories
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
# XDG user directories -->

#--< Set local PATH
export PATH="$HOME/.local/bin:$PATH"
# Set local PATH -->

export EDITOR='nvim'

#--< Set XDG user directories for programs
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export HISTFILE="$XDG_DATA_HOME/zsh/history"
export ADOTDIR="$XDG_DATA_HOME/zsh/antigen"
export FPATH="$XDG_DATA_HOME/zsh/completions:$FPATH"

export LESSKEY="$XDG_CONFIG_HOME/less/key"
export LESSHISTFILE="$XDG_DATA_HOME/less/history"

#--< Ruby
export BUNDLE_USER_CONFIG="$XDG_CONFIG_HOME/bundle"
export BUNDLE_USER_CACHE="$XDG_CACHE_HOME/bundle"
export BUNDLE_USER_PLUGIN="$XDG_DATA_HOME/bundle"
# Ruby -->

#--< Rust
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export PATH="$CARGO_HOME/bin:$PATH"
# Rust -->

#--< Node
export NVM_DIR="$XDG_DATA_HOME/nvm"
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"
export NODE_REPL_HISTORY="$XDG_DATA_HOME/node/history"
export NODE_EXTRA_CA_CERTS="$(mkcert -CAROOT)/rootCA.pem"
# Node -->

#--< Python
export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/startup.py"
export PYTHONHISTORY="$XDG_DATA_HOME/python/history"
# Python -->

#--< WakaTime
export WAKATIME_HOME="$XDG_CONFIG_HOME/wakatime"
# WakaTime -->

export GNUPGHOME="$XDG_DATA_HOME/gnupg"
# Set XDG user directories for programs -->
