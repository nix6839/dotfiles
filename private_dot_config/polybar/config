[bar/i3bar]
locale = ko_KR.UTF-8

background = #000
foreground = #fff
enable-ipc = true

font-0 = Pretendard:size=11;3
font-1 = JetBrainsMono Nerd Font;4
font-2 = Twemoji:scale=6.5;3
font-3 = Noto Sans CJK JP:size=10;3

scroll-up = "#i3.prev"
scroll-down = "#i3.next"

tray-position = center

modules-left = spotify spotify-prev spotify-play-pause spotify-next i3
modules-right = date

[module/spotify]
type = custom/script
tail = true
format-prefix = "  "
exec = ~/.config/polybar/scripts/spotify/scroll_spotify_status.sh

[module/spotify-prev]
type = custom/script
exec = echo "玲"
click-left = playerctl --player=playerctld previous

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo "契"
hook-1 = echo ""
initial = 1
click-left = playerctl --player=playerctld play-pause

[module/spotify-next]
type = custom/script
exec = echo "怜"
click-left = playerctl --player=playerctld next

[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true
strip-wsnumbers = true

[module/date]
type = internal/date
date = %Y-%m-%d %A
time = %H:%M:%S
label = %time% %date%
